import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export const prerender = true;

const geo = { city: "Rennes", region: "Bretagne", country: "France" };

// âœ… Normalisation robuste : minuscule + sans accents + espaces -> "-"
const slugify = (s: string) =>
  s
    .toString()
    .trim()
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "") // enlÃ¨ve accents
    .replace(/[^a-z0-9]+/g, "-")     // tout le reste -> "-"
    .replace(/(^-|-$)/g, "");        // supprime tirets dÃ©but/fin

// ðŸ”Ž Tag actif : on le normalise TOUJOURS en slug (mÃªme si URL contient un label)
const activeTagRaw = Astro.url.searchParams.get("tag");
const activeTag = activeTagRaw ? slugify(activeTagRaw) : null;

// ðŸ“š RÃ©cupÃ©ration des articles (sans drafts)
const allPosts = await getCollection("blog", ({ data }) => data.draft !== true);

// ðŸ·ï¸ Map slug -> label (pour afficher propre)
const tagMap = new Map<string, string>();

for (const p of allPosts) {
  for (const t of p.data.tags ?? []) {
    const slug = slugify(t);
    if (!slug) continue;
    if (!tagMap.has(slug)) tagMap.set(slug, t); // conserve le 1er libellÃ© trouvÃ©
  }
}

// ðŸ‘‰ Liste des slugs (stable)
const allTags = Array.from(tagMap.keys()).sort((a, b) => a.localeCompare(b, "fr"));

// ðŸ§  Filtrage : slug(articleTag) === activeTag(slug)
const posts = (activeTag
  ? allPosts.filter((p) => (p.data.tags ?? []).some((t) => slugify(t) === activeTag))
  : allPosts
).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.date.getTime() - a.data.date.getTime()
);

// ðŸ—“ï¸ Format date
const formatDate = (d: Date) =>
  d.toLocaleDateString("fr-FR", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });

// ðŸ” Canonical propre (SEO)
const canonical = activeTag ? `/blog?tag=${encodeURIComponent(activeTag)}` : "/blog";

// âœ… Helper : label lisible
const tagLabel = (slug: string) => tagMap.get(slug) ?? slug;
